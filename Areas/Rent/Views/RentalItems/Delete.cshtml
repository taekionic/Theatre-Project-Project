                        @Html.DisplayFor(model => model.PickupDate)
                    </div>
                </div>
                <div class="RentalItem-details--infocontent">
                    <div class="RentalItem-details--infolabel">
                        Return Date:
                    </div>
                    <div class="RentalItem-details--infoinfo">
                        @Html.DisplayFor(model => model.ReturnDate)
                    </div>
                </div>
                <div class="RentalItem-details--infocontent">
                    <div class="RentalItem-details--infolabel">
