@model TheatreCMS3.Areas.Rent.Models.RentalItem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string image = "";
    if (Model.ItemPhoto != null)
    {
        image = Convert.ToBase64String(Model.ItemPhoto);
    }
    string deletelink = Url.Action("Delete", "RentalItems", new { id = Model.RentalItemId });
    string backlink = Url.Action("", "RentalItems");
}
<h2>Delete</h2>

<h3 style="text-align: center;">Are you sure you want to delete @Html.DisplayFor(model => model.Item) from the Rental List? </h3>
